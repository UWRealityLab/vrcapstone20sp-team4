<tutorial name="breakfast burrito">
    <ingredients servings="8">
        <ingredient name="vegetable oil" unit="tablespoons" quantity="3"/>
        <ingredient name="hash brown potatoes" unit="oz" quantity="4"/>
        <ingredient name="egg" unit="" quantity="8"/>
        <ingredient name="salt" unit="teaspoon" quantity="0.5"/>
        <ingredient name="pepper" unit="teaspoon" quantity="0.5"/>
        <ingredient name="cooked breakfast sausage links" unit="" quantity="6"/>
        <ingredient name="tortillas" unit="" quantity="8"/>
        <ingredient name="shredded Mexican cheese blend" unit="cups" quantity="2"/>
    </ingredients>
    <utensils>
        <utensil name="pan"/>
        <utensil name="spatula"/>
        <utensil name="measuring cop"/>
        <utensil name="teaspoon"/>
        <utensil name="knife"/>
        <utensil name="cutting board"/>
        <utensil name="medium bowl"/>
        <utensil name="large bowl"/>
        <utensil name="foil"/>
    </utensils>
    <step name="1">
        <substep name="11" timer="" ingredients="oil" utensils="pan,tablespoons" description="In a skillet/pan, heat 2 tablespoons of the oil over medium-high heat"/>
    </step>
    <step name="2">
        <substep name="21" timer="" ingredients="hash brown potatoes" utensils="" description="Add frozen hash brown potatoes in an even layer; press down lightly."/>
    </step>
    <step name="3">
        <substep name="31" timer="420" ingredients="hash brown potatoes" utensils="pan" description="Cook potatoes 7 minutes without moving"/>
    </step>
    <step name="4">
        <substep name="41" timer="" ingredients="oil" utensils="tablespoon" description="Drizzle with remaining 1 tablespoon oil; turn."/>
    </step>
    <step name="5">
        <substep name="51" timer="420" ingredients="" utensils="" description="Cook 6 to 8 minutes longer or until browned on both sides and hot throughout."/>
    </step>
    <step name="6">
        <substep name="61" timer="" ingredients="" utensils="pan,foil,medium bowl" description="Transfer to a medium bowl; cover with foil to keep warm. Wipe out the skillet."/>
    </step>
    <step name="7">
        <substep name="71" timer="" ingredients="egg,salt,pepper" utensils="large bowl" description="In a large bowl, beat eggs, salt and pepper until well blended."/>
    </step>
    <step name="8">
        <substep name="81" timer="180" ingredients="sausage" utensils="pan" description="In the same skillet over medium-high heat, cook sausage 2 to 3 minutes, stirring frequently, until browned. "/>
    </step>
    <step name="9">
        <substep name="91" timer="180" ingredients="" utensils="pan" description="Stir in egg mixture; cook 2 to 3 minutes, stirring occasionally, until scrambled."/>
    </step>
    <step name="10">
        <substep name="101" timer="" ingredients="tortilla,cheese" utensils="" description="To assemble burritos, spoon a line of hash browns down the center of each tortilla. Top with cheese and egg mixture."/>
    </step>
    <step name="11">
        <substep name="111" timer="" ingredients="" utensils="" description="Roll up each tortilla tightly to secure filling. Serve immediately, or freeze."/>
    </step>

</tutorial>